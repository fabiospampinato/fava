{
  "name": "fava",
  "repository": "github:fabiospampinato/fava",
  "description": "A wannabe tiny largely-drop-in replacement for ava that works in the browser too.",
  "version": "0.0.8",
  "type": "module",
  "bin": "dist/bin.js",
  "main": "dist/index.js",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "tsex clean",
    "compile": "tsex compile",
    "compile:watch": "tsex compile --watch",
    "test": "node dist/bin.js",
    "test:watch": "node dist/bin.js --watch",
    "prepublishOnly": "npm run clean && npm run compile && npm run test"
  },
  "keywords": [
    "test",
    "tests",
    "testing",
    "framework",
    "bdd",
    "tdd",
    "simple",
    "tiny",
    "small",
    "browser",
    "isomorphic"
  ],
  "dependencies": {
    "are-deeply-equal": "^1.0.1",
    "call-chainer": "^3.0.0",
    "promise-make-naked": "^2.0.0",
    "specialist": "^1.0.1",
    "tiny-colors": "^2.0.1",
    "tiny-readdir": "^2.2.0",
    "watcher": "^2.2.2",
    "zeptomatch": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.13.0",
    "tsex": "^2.1.0",
    "type-fest": "^3.5.7",
    "typescript": "^4.9.5"
  }
}
